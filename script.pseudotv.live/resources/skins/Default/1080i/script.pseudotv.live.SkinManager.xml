<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>SetProperty(PTVL.SSLEFTD,FFFFFFFF,10000)</onload>
    <onload>SetProperty(PTVL.SSRIGHTD,FFFFFFFF,10000)</onload>
    <onload>SetProperty(PTVL.SSUPD,FFFFFFFF,10000)</onload>
    <onload>SetProperty(PTVL.SSDOWND,FFFFFFFF,10000)</onload>
    <allowoverlay>no</allowoverlay>
    <zorder>1</zorder>
    <controls>
        <control type="image">
            <description>Background</description>
            <left>320</left>
            <top>180</top>
            <width>1280</width>
            <height>845</height>
            <texture border="40">pstvlButtonNoFocusAlt.png</texture>
        </control>
        <control type="image">
            <description>Dialog Header image</description>
            <left>320</left>
            <top>180</top>
            <width>1280</width>
            <height>75</height>
            <texture>config/settings_dialogheader.png</texture>
        </control>
        <control type="label">
            <left>320</left>
            <top>205</top>
            <width>1280</width>
            <height>40</height>
            <font>font13_title</font>
            <label>Skin Manager - PseudoTV Live</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FF0297eb</textcolor>
            <shadowcolor>black</shadowcolor>
        </control>
        <control type="grouplist">
            <left>415</left>
            <top>280</top>   
            <width>1280</width>
            <height>845</height>
            <itemgap>5</itemgap>
            <orientation>vertical</orientation>
            <control type="image">
                <width>1024</width>
                <height>30</height>
                <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
                <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSUPD)]" flipy="true" >config/wall_arrow_vertical.png</texture>
                <aspectratio>keep</aspectratio>
            </control> 
            <control type="grouplist">
                <left>0</left>
                <top>0</top>  
                <width>1280</width>
                <height>576</height>
                <itemgap>5</itemgap>
                <orientation>horizontal</orientation>
                <control type="image">
                    <width>30</width>
                    <height>576</height>
                    <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
                    <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSLEFTD)]">config/wall_arrow.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
                <control type="image">
                    <fadetime>200</fadetime>
                    <orientation>horizontal</orientation>
                    <scrolltime tween="sine" easing="out">200</scrolltime>
                    <autoscroll>true</autoscroll>
                    <description>Screenshots</description>
                    <width>1024</width>
                    <height>576</height>
                    <animation effect="fade" start="0" end="100" time="3000">VisibleChange</animation>
                    <texture fallback="$INFO[Window(10000).Property(PTVL.SKINSHOT_FALLBACK)]">$INFO[Window(10000).Property(PTVL.SKINSHOT)]</texture>
                </control>  
                <control type="image">
                    <width>30</width>
                    <height>576</height>
                    <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
                    <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSRIGHTD)]" flipx="true">config/wall_arrow.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>
            <control type="image">
                <width>1024</width>
                <height>30</height>
                <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
                <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSDOWND)]">config/wall_arrow_vertical.png</texture>
                <aspectratio>keep</aspectratio>
            </control>
        </control>
        <control type="image">
            <description>Skin Name image</description>
            <left>320</left>
            <top>940</top>
            <width>1280</width>
            <height>80</height>
            <texture>config/settings_dialogheader.png</texture>
        </control> 
        <control type="label">
            <description>Skin Name</description> 
            <left>415</left>
            <top>955</top>      
            <width>1024</width>
            <height>25</height>
            <font>font13_title</font>
            <align>center</align>
            <aligny>center</aligny>
            <label>[COLOR=FFFFFFFF]$INFO[Window(10000).Property(PTVL.SKINNAME)][/COLOR]</label>
        </control>  
        <control type="label">
            <description>Skin Details</description> 
            <left>415</left>
            <top>990</top>      
            <width>1024</width>
            <height>25</height>
            <font>font10</font>
            <align>center</align>
            <aligny>center</aligny>
            <label>[COLOR=C0C0C0C0]$INFO[Window(10000).Property(PTVL.SKINAUTHOR)] $INFO[Window(10000).Property(PTVL.SKINVERSION)] [/COLOR]</label>
        </control>  
    </controls>
</window>
