<?xml version="1.0" encoding="UTF-8"?>
<window>
    <allowoverlay>no</allowoverlay>
    <zorder>1</zorder>
    <controls>
        <control type="image">
            <left>320</left>
            <top>180</top>
            <width>1280</width>
            <height>720</height>
            <texture border="40">config/ptv_DialogBack.png</texture>
        </control>
        <control type="image">
            <description>Dialog Header image</description>
            <left>345</left>
            <top>180</top>
            <width>1280</width>
            <height>75</height>
            <texture>config/ptv_dialogheader.png</texture>
        </control>
        <control type="label">
            <left>315</left>
            <top>205</top>
            <width>1280</width>
            <height>40</height>
            <font>font13_title</font>
            <label>$INFO[System.AddonTitle(script.pseudotv.live),, - ]Skin Manager</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>orange</textcolor>
            <shadowcolor>black</shadowcolor>
        </control>
        <control type="image">
            <fadetime>200</fadetime>
            <orientation>horizontal</orientation>
            <scrolltime tween="sine" easing="out">200</scrolltime>
            <autoscroll>true</autoscroll>
            <description>Screenshots</description>
            <left>525</left>
            <top>295</top>
            <width>848</width>
            <height>480</height>
            <animation effect="fade" start="0" end="100" time="3000">VisibleChange</animation>
            <texture fallback="$INFO[Window(10000).Property(PTVL.SKINSHOT_FALLBACK)]">$INFO[Window(10000).Property(PTVL.SKINSHOT)]</texture>
        </control>  
        <control type="image">
            <description>Skin Name image</description>
            <left>385</left>
            <top>815</top>
            <width>1145</width>
            <height>65</height>
            <font>font30</font>
            <align>center</align>
            <aligny>center</aligny>
            <colordiffuse>FF0297eb</colordiffuse>
            <texture>config/ptv_dialogheader.png</texture>
        </control> 
        <control type="image">
            <left>490</left>
            <top>300</top>
            <width>30</width>
            <height>480</height>
            <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
            <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSLEFTD)]">config/wall_arrow.png</texture>
        </control>
        <control type="image">
            <left>1383</left>
            <top>300</top>
            <width>30</width>
            <height>480</height>
            <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
            <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSRIGHTD)]" flipx="true">config/wall_arrow.png</texture>
        </control>
        <control type="image">
            <left>525</left>
            <top>265</top>
            <width>848</width>
            <height>30</height>
            <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
            <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSUPD)]" flipy="true" >config/wall_arrow_vertical.png</texture>
        </control>
        <control type="image">
            <left>525</left>
            <top>780</top>
            <width>848</width>
            <height>30</height>
            <animation effect="fade" start="20" time="200" pulse="true">VisibleChange</animation>
            <texture colordiffuse="$INFO[Window(10000).Property(PTVL.SSDOWND)]">config/wall_arrow_vertical.png</texture>
        </control>
        <control type="grouplist">
            <left>525</left>
            <top>825</top>    
            <width>848</width>
            <height>40</height>      
            <itemgap>40</itemgap>
            <orientation>horizontal</orientation>
            <control type="label">
                <description>Skin Name</description>    
                <width min="40" max="640">auto</width>
                <height>40</height>
                <font>font14</font>
                <align>left</align>
                <aligny>center</aligny>
                <label>$INFO[Window(10000).Property(PTVL.SKINNAME)]</label>
            </control>  
            <control type="label">
                <description>Skin Author</description>
                <width min="40" max="640">auto</width>
                <height>40</height>
                <font>font10</font>
                <align>right</align>
                <aligny>center</aligny>
                <label>$INFO[Window(10000).Property(PTVL.SKINAUTHOR)]</label>
            </control> 
        </control> 
    </controls>
</window>
