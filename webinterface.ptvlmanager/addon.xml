<?xml version="1.0" encoding="UTF-8"?>
<addon
        id="webinterface.PTVL"
        version="4.1.18"
        name="KODI PTVL Manager"
        provider-name="peppy, Lunatixz">
    <requires>
        <import addon="xbmc.json" version="6.14.3"/>
    </requires>
    <extension
            point="xbmc.gui.webinterface"/>
    <extension point="xbmc.addon.metadata">
        <summary>Web interface to manage media library for kodi.</summary>
        <description>PTVL webinterface allows you to control and manage Kodi libraries, and manage your PTVL Channels.</description>
        <platform>all</platform>
        <source>https://github.com/slash2009/XWMM</source>
        <forum>http://forum.kodi.tv/showthread.php?tid=188839</forum>
        <disclaimer lang="en">This is a beta addon and may contain bugs or flawed code, please contact us via github project issues and help us fix the problem</disclaimer>
    </extension>
    <extension
            point="xbmc.addon.repository"
            name="PTVL and KODI Add-on Repository">
        <info compressed="true">http://kodi.neptune-one.net/addons/addons.xml</info>
        <checksum>http://kodi.neptune-one.net/addons/addons.xml.md5</checksum>
        <datadir zip="true">http://kodi.neptune-one.net/addons</datadir>
    </extension>
</addon>
