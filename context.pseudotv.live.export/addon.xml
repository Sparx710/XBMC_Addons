<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.pseudotv.live.export" name="PseudoTV Live Export" version="1.0.1" provider-name="Lunatixz">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.pseudotv.live" version="0.6.5"/>
  </requires>
    <extension point="kodi.context.item" library="addon.py">
      <item>
        <label>32000</label>
        <visible>[System.HasAddon(ListItem.Property(Addon.ID))|SubString(ListItem.FileName,xsp)|StringCompare(ListItem.dbtype,tvshow)|Container.Content(files)|Container.Content(plugins)|Container.Content(addons)]+[ListItem.Property(IsPlayable)|ListItem.IsFolder|!Library.HasContent(music)]|[Window.IsVisible(MyPVRChannels.xml)|Window.IsVisible(MyPVRGuide.xml)]</visible>
      </item>
    </extension>
  <extension point="xbmc.addon.metadata">
    <description lang="en">Export sources to PseudoTV Live for easy channel creation.</description>
    <description lang="en_US">>Export sources to PseudoTV Live for easy channel creation.</description>
    <platform>all</platform>
    <forum></forum>
    <source></source>
  </extension>
</addon>
